<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.HCI.elience">
    <!-- To auto-complete the email text field in the login form with the user's emails -->


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/elience_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/elience_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.AskQuestionActivity"
            android:label="Elience"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activities.GroupChatActivity"
            android:label="Elience">
        </activity>
        <activity android:name=".activities.BrowseGroupsActivity" android:label="Elience">
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="Elience"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ChatActivity"
            android:label="Elience"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".activities.SignupActivity" />
        <activity android:name=".ForumActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name">

        </activity>
        <activity android:name=".QuestionDetailActivity">
        </activity>
        <activity android:name=".activities.THChatActivity">
        </activity>

    </application>

</manifest>